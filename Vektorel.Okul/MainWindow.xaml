        <Label Content="Ad" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="286,76,0,0"/>
        <Label Content="Soyad" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="286,118,0,0"/>
        <Label Content="Numara" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="286,161,0,0"/>
        <Button  Content="Kaydet" HorizontalAlignment="Left" VerticalAlignment="Top" Width="74" Margin="334,267,0,0" Click="Button_Click"/>
        <ComboBox DisplayMemberPath="Sinifad" Name="cmbSiniflar" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="360,218,0,0" ItemsSource="{Binding}" SelectedValuePath="Sinifid"/>
        <Label Content="Sınıfı" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="286,218,0,0"/>
        <Label Content="Sınıfı" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="286,218,0,0"/>


    </Grid>
</Window>
